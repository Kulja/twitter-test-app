<div class='wrapper'>
  <div class='dashboard'>
    <div class='left-menu'>
      <img class='avatar size70' {{bind-attr src=user.avatar}}>
      <div class='info'>
        {{user.name}}
      </div>
      {{textarea value=newTweetText placeholder='Compose new Tweet...'}}
      <button {{action 'createTweet' newTweetText}} type='button' class='btn btn-primary'><i class="fa fa-twitter fa-lg"></i> Tweet</button>
    </div>
  </div>
  <div class='content-main'>
    {{outlet}}
  </div>
</div>
