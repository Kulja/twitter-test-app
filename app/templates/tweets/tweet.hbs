{{#link-to 'tweets'}}
  <div class='back'>
    <i class='fa fa-arrow-left fa-2x'></i>
  </div>
{{/link-to}}
<div class='tweet-detail'>
  <img class='avatar' {{bind-attr src=ownerAvatar}}>
  <div>
    Tweet text: <span class='detailed-text'>{{text}}</span> <br />
    Tweet owner: <span class='detailed-text'>{{ownerName}}</span> <br />
    Favorites: <span class='detailed-text'>{{favorite}}</span>
  </div>
</div>
